import java.util.Scanner;
 
public class Main {
    public static void main(String[] args) {
        Scanner dataIn = new Scanner(System.in);
        int s = Integer.parseInt(dataIn.nextLine());
        int j = s/3600;
        s %= 3600;
        int m = s/60;
        s %= 60;
        System.out.println(j + ":" + m + ":" + s);
    }
}
